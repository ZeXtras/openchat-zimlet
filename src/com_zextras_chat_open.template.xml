<zimlet name="#NAME#"
        version="#VERSION#"
        label="#NAME#"
        description="#DESCRIPTION#">

    <include>#NAME#_bundle.js</include>

    <includeCSS>#NAME#.css</includeCSS>
    <includeCSS>emojione.sprites.css</includeCSS>

    <handlerObject>#NAME#_hdlr</handlerObject>

    <!-- Includes for auto-generated template files -->
    <include>templates/Widgets.template.js</include>
    <include>templates/Windows.template.js</include>

    <userProperties>
        <property type="string" name="zxchat_pref_dockmode" value="true"/>
        <property type="string" name="zxchat_pref_dockmode_up" value="true"/>
        <!-- Enable Emoji in chat conversation -->
        <property type="string" name="zxchat_pref_emoji_in_conv" value="true"/>
        <!-- Enable Emoji in history -->
        <property type="string" name="zxchat_pref_emoji_in_hist" value="true"/>
        <!-- Enable Emoji in email -->
        <property type="string" name="zxchat_pref_emoji_in_mail" value="false"/>
        <!-- Show debug tab in preferences dialog -->
        <property type="string" name="zxchat_pref_show_debug_info" value="false"/>
        <property type="string" name="report_errors" value="false"/>
    </userProperties>

    <resource>emojione.sprites.png</resource>
    <resource>images/com_zextras_chat_open_sprite.png</resource>
    <resource>images/desktop-chat_128.png</resource>
    <resource>images/desktop-zxchat_128.png</resource>
    <resource>images/sf_clearSearchIcon.png</resource>
    <resource>images/sf_searchIcon.png</resource>
    <!-- TODO: Add emojione images here... -->
</zimlet>